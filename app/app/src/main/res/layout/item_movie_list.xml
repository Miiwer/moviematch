<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp">
    <ImageView
        android:id="@+id/listItemImgPoster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/movie_match_logo_fg"/>

    <View
        android:id="@+id/listItemViewGradient"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/listItemImgPoster"
        android:background="@drawable/movie_item_bg_gradient"/>
    <TextView
        android:id="@+id/listItemTxtImdbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imdb_rating_placeholder"
        android:layout_alignTop="@+id/listItemViewGradient"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignStart="@+id/listItemViewGradient"
        android:layout_alignLeft="@+id/listItemViewGradient" />

    <TextView
        android:id="@+id/listItemTxtRottenRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listItemViewGradient"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/listItemTxtImdbRating"
        android:layout_toRightOf="@+id/listItemTxtImdbRating"
        android:text="@string/rotten_rating_placeholder"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp" />


</RelativeLayout>